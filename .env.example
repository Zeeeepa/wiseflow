# WiseFlow Environment Configuration

# Project Settings
PROJECT_DIR="work_dir"
VERBOSE=false

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
WISEFLOW_API_KEY=dev-api-key
WEBHOOK_SECRET_KEY=wiseflow-webhook-secret

# LLM Settings
LLM_API_BASE="https://api.openai.com/v1"
LLM_API_KEY="your-api-key"
PRIMARY_MODEL="gpt-3.5-turbo"
SECONDARY_MODEL="gpt-3.5-turbo"
VL_MODEL="gpt-4-vision-preview"
LLM_CONCURRENT_NUMBER=1

# DashScope Settings (Optional)
DASHSCOPE_API_KEY="your-dashscope-api-key"

# PocketBase Settings
PB_API_BASE="http://127.0.0.1:8090"
PB_API_AUTH="admin@example.com|your-password"

# Search Settings
ZHIPU_API_KEY="your-zhipu-api-key"

# Crawler Settings
CRAWLER_TIMEOUT=60
CRAWLER_MAX_DEPTH=3
CRAWLER_MAX_PAGES=100
MAX_CONCURRENT_REQUESTS=5

# Task Settings
MAX_CONCURRENT_TASKS=4
AUTO_SHUTDOWN_ENABLED=false
AUTO_SHUTDOWN_IDLE_TIME=3600

# Process Settings
PROCESS_RELATED_LINKS=false
PROCESS_SEARCH_ENGINES=true
PROCESS_RSS_FEEDS=true

# Feature Flags
ENABLE_MULTIMODAL=false
ENABLE_KNOWLEDGE_GRAPH=false
ENABLE_INSIGHTS=true
ENABLE_REFERENCES=true

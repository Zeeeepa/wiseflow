# WiseFlow Environment Configuration
# This file contains all the environment variables used by WiseFlow.
# Copy this file to .env and update the values as needed.

#------------------------------------------------------------------------------
# Project Settings
#------------------------------------------------------------------------------
# Directory for storing project files
PROJECT_DIR="work_dir"

# Enable verbose logging (true/false)
VERBOSE=false

#------------------------------------------------------------------------------
# LLM Settings
#------------------------------------------------------------------------------
# Base URL for the LLM API
LLM_API_BASE="https://api.openai.com/v1"

# API key for the LLM provider (required)
LLM_API_KEY="your-api-key"

# Primary LLM model to use for most tasks
PRIMARY_MODEL="gpt-4o"

# Secondary LLM model for simpler tasks (defaults to PRIMARY_MODEL if not set)
SECONDARY_MODEL="gpt-4o-mini"

# Vision-language model for multimodal analysis
VL_MODEL="gpt-4o"

# Maximum number of concurrent LLM requests
LLM_CONCURRENT_NUMBER=4

#------------------------------------------------------------------------------
# PocketBase Settings
#------------------------------------------------------------------------------
# PocketBase API base URL
PB_API_BASE="http://127.0.0.1:8090"

# PocketBase authentication (format: "email|password")
PB_API_AUTH="admin@example.com|your-password"

# PocketBase superuser email (used by Docker)
PB_SUPERUSER_EMAIL="admin@example.com"

# PocketBase superuser password (used by Docker)
PB_SUPERUSER_PASSWORD="your-password"

#------------------------------------------------------------------------------
# Search Settings
#------------------------------------------------------------------------------
# ZhiPu API key for search functionality
ZHIPU_API_KEY="your-zhipu-api-key"

#------------------------------------------------------------------------------
# Crawler Settings
#------------------------------------------------------------------------------
# Timeout for crawler requests in seconds
CRAWLER_TIMEOUT=60

# Maximum depth for crawler to follow links
CRAWLER_MAX_DEPTH=3

# Maximum number of pages for crawler to visit
CRAWLER_MAX_PAGES=100

#------------------------------------------------------------------------------
# Task Settings
#------------------------------------------------------------------------------
# Maximum number of concurrent tasks
MAX_CONCURRENT_TASKS=4

# Enable automatic shutdown when idle (true/false)
AUTO_SHUTDOWN_ENABLED=false

# Idle time before automatic shutdown in seconds
AUTO_SHUTDOWN_IDLE_TIME=3600

# Interval for checking idle time in seconds
AUTO_SHUTDOWN_CHECK_INTERVAL=300

#------------------------------------------------------------------------------
# Feature Flags
#------------------------------------------------------------------------------
# Enable multimodal analysis (image processing) (true/false)
ENABLE_MULTIMODAL=false

# Enable knowledge graph construction (true/false)
ENABLE_KNOWLEDGE_GRAPH=false

# Enable insight generation (true/false)
ENABLE_INSIGHTS=true

# Enable reference support (true/false)
ENABLE_REFERENCES=true

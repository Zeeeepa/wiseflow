# WiseFlow Environment Configuration

# Project Settings
PROJECT_DIR="work_dir"
VERBOSE=false

# LLM Settings
LLM_API_BASE="https://api.openai.com/v1"
LLM_API_KEY="your-api-key"
PRIMARY_MODEL="gpt-4o"
SECONDARY_MODEL="gpt-4o-mini"
VL_MODEL="gpt-4o"
LLM_CONCURRENT_NUMBER=4

# PocketBase Settings
PB_API_BASE="http://127.0.0.1:8090"
PB_API_AUTH="admin@example.com|your-password"

# API Settings
API_HOST="0.0.0.0"
API_PORT=8000
API_RELOAD=false
WISEFLOW_API_KEY="dev-api-key"

# Search Settings
ZHIPU_API_KEY="your-zhipu-api-key"
EXA_API_KEY="your-exa-api-key"

# Crawler Settings
CRAWLER_TIMEOUT=60
CRAWLER_MAX_DEPTH=3
CRAWLER_MAX_PAGES=100
MAX_CONCURRENT_REQUESTS=5

# Task Settings
MAX_CONCURRENT_TASKS=4
AUTO_SHUTDOWN_ENABLED=false
AUTO_SHUTDOWN_IDLE_TIME=3600
AUTO_SHUTDOWN_CHECK_INTERVAL=300

# Feature Flags
ENABLE_MULTIMODAL=false
ENABLE_KNOWLEDGE_GRAPH=false
ENABLE_INSIGHTS=true
ENABLE_REFERENCES=true
ENABLE_EVENT_SYSTEM=true

# Logging Settings
LOG_LEVEL="INFO"
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
STRUCTURED_LOGGING=false
LOG_ROTATION="50 MB"
LOG_RETENTION="10 days"

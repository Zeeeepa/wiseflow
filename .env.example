# WiseFlow Environment Variables Example
# Copy this file to .env and modify as needed

# Project Settings
PROJECT_DIR=~/wiseflow_data
VERBOSE=false

# LLM Settings
LLM_API_BASE=https://api.openai.com/v1
LLM_API_KEY=your-openai-api-key
PRIMARY_MODEL=gpt-4
SECONDARY_MODEL=gpt-3.5-turbo
VL_MODEL=gpt-4-vision-preview
LLM_CONCURRENT_NUMBER=2

# PocketBase Settings
PB_API_BASE=http://localhost:8090
PB_API_AUTH=your-pocketbase-auth-token

# Search Settings
EXA_API_KEY=your-exa-api-key
TAVILY_API_KEY=your-tavily-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key

# Task Settings
MAX_CONCURRENT_TASKS=4
AUTO_SHUTDOWN_ENABLED=false
AUTO_SHUTDOWN_IDLE_TIME=3600
AUTO_SHUTDOWN_CHECK_INTERVAL=300

# Feature Flags
ENABLE_MULTIMODAL=false
ENABLE_KNOWLEDGE_GRAPH=false
ENABLE_INSIGHTS=true
ENABLE_REFERENCES=true
ENABLE_EVENT_SYSTEM=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
WISEFLOW_API_KEY=dev-api-key

# Logging Settings
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
STRUCTURED_LOGGING=false
LOG_ROTATION=50 MB
LOG_RETENTION=10 days


# WiseFlow Environment Configuration
# This file contains all the environment variables that can be configured for WiseFlow.
# Copy this file to .env and modify the values as needed.

# ===== Project Settings =====
# Directory where all data will be stored
PROJECT_DIR="work_dir"
# Enable verbose logging (true/false)
VERBOSE=false

# ===== LLM Settings =====
# Base URL for the LLM API (e.g., OpenAI, Azure, etc.)
LLM_API_BASE="https://api.openai.com/v1"
# API key for the LLM service (REQUIRED)
LLM_API_KEY="your-api-key"
# Primary model to use for most tasks (REQUIRED)
PRIMARY_MODEL="gpt-4o"
# Secondary model to use for less complex tasks (defaults to PRIMARY_MODEL if not set)
SECONDARY_MODEL="gpt-4o-mini"
# Vision-language model for multimodal tasks (defaults to PRIMARY_MODEL if not set)
VL_MODEL="gpt-4o"
# Maximum number of concurrent LLM API calls
LLM_CONCURRENT_NUMBER=4

# ===== PocketBase Settings =====
# Base URL for the PocketBase API
PB_API_BASE="http://127.0.0.1:8090"
# Authentication credentials for PocketBase (REQUIRED)
# Format: "email|password" or "username|password"
PB_API_AUTH="admin@example.com|your-password"

# ===== Search Settings =====
# API key for Zhipu AI (optional)
ZHIPU_API_KEY="your-zhipu-api-key"
# API key for Exa search (optional)
EXA_API_KEY="your-exa-api-key"

# ===== Crawler Settings =====
# Timeout for web crawling operations (seconds)
CRAWLER_TIMEOUT=60
# Maximum depth for web crawling
CRAWLER_MAX_DEPTH=3
# Maximum number of pages to crawl
CRAWLER_MAX_PAGES=100
# Maximum number of concurrent requests during crawling
MAX_CONCURRENT_REQUESTS=5

# ===== Task Settings =====
# Maximum number of concurrent tasks
MAX_CONCURRENT_TASKS=4
# Enable automatic shutdown when idle (true/false)
AUTO_SHUTDOWN_ENABLED=false
# Time in seconds to wait before shutting down when idle
AUTO_SHUTDOWN_IDLE_TIME=3600
# Interval in seconds to check for idle state
AUTO_SHUTDOWN_CHECK_INTERVAL=300

# ===== Feature Flags =====
# Enable multimodal processing (images, etc.) (true/false)
ENABLE_MULTIMODAL=false
# Enable knowledge graph generation (true/false)
ENABLE_KNOWLEDGE_GRAPH=false
# Enable insights generation (true/false)
ENABLE_INSIGHTS=true
# Enable reference tracking (true/false)
ENABLE_REFERENCES=true
# Enable event system (true/false)
ENABLE_EVENT_SYSTEM=true

# ===== API Settings =====
# Host to bind the API server to
API_HOST="0.0.0.0"
# Port to bind the API server to
API_PORT=8000
# Enable auto-reload for development (true/false)
API_RELOAD=false
# API key for accessing the WiseFlow API
WISEFLOW_API_KEY="dev-api-key"

# ===== Logging Settings =====
# Log level (TRACE, DEBUG, INFO, SUCCESS, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"
# Enable logging to file (true/false)
LOG_TO_FILE=true
# Enable logging to console (true/false)
LOG_TO_CONSOLE=true
# Directory for log files (defaults to PROJECT_DIR/logs if not set)
LOG_DIR=""
# Enable structured logging (JSON format) (true/false)
STRUCTURED_LOGGING=false
# Log rotation size
LOG_ROTATION="50 MB"
# Log retention period
LOG_RETENTION="10 days"


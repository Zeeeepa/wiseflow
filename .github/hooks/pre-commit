#!/bin/bash

# Exit on error
set -e

# Check if black is installed
if ! command -v black &> /dev/null; then
    echo "Error: black is not installed. Please install it with 'pip install black'."
    exit 1
fi

# Check if isort is installed
if ! command -v isort &> /dev/null; then
    echo "Error: isort is not installed. Please install it with 'pip install isort'."
    exit 1
fi

# Check if flake8 is installed
if ! command -v flake8 &> /dev/null; then
    echo "Error: flake8 is not installed. Please install it with 'pip install flake8'."
    exit 1
fi

# Get all staged Python files
STAGED_PY_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.py$' || true)

if [ -n "$STAGED_PY_FILES" ]; then
    echo "Running black on staged Python files..."
    echo "$STAGED_PY_FILES" | xargs black

    echo "Running isort on staged Python files..."
    echo "$STAGED_PY_FILES" | xargs isort

    echo "Running flake8 on staged Python files..."
    echo "$STAGED_PY_FILES" | xargs flake8
fi

# Get all staged JavaScript files
STAGED_JS_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.js$' || true)

if [ -n "$STAGED_JS_FILES" ]; then
    if command -v eslint &> /dev/null; then
        echo "Running eslint on staged JavaScript files..."
        echo "$STAGED_JS_FILES" | xargs eslint --fix
    else
        echo "Warning: eslint is not installed. Skipping JavaScript linting."
    fi
fi

# Add back the modified files to staging
if [ -n "$STAGED_PY_FILES" ]; then
    echo "$STAGED_PY_FILES" | xargs git add
fi

if [ -n "$STAGED_JS_FILES" ]; then
    echo "$STAGED_JS_FILES" | xargs git add
fi

exit 0

